{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "alwaysStrict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "*.d.ts",
    "test/*.d.ts",
    "node_modules",
    "dist"
  ]
}