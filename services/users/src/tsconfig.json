{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"alwaysStrict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"filesGlob": [
		"**/*.ts",
		"!node_modules/**"
	],
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"*.d.ts",
		"test/*.d.ts",
		"node_modules"
	]
}
